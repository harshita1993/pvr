<div class="row">
  <% @movies.each do|movie|%>
<div class="col-sm-6 col-md-3">
<div class="thumbnail">
  <%=link_to (image_tag movie.image.url(:medium),class: 'image'),movie%>
</div>
</div>
<%end%>
<%if @movies.blank?%>
    <h3> No movie found!</h3>
<%else%>
    <% link_to root_path%>
<%end%>
</div>
